{
  "name": "backend-exercise-2023",
  "version": "1.0.0",
  "description": "complete GraphQL API",
  "main": "src/app.ts",
  "scripts": {
    "start": "node src/app.js",
    "start:dev": "nodemon src/app.ts -i test -- dev",
    "test": "mocha -t 10000 --forbid-only -- dev",
    "test:local": "mocha -t 10000 -- dev",
    "lint": "eslint . --ext .ts",
    "compose:dev": "docker-compose --env-file .env.dev -f ./docker-compose.dev.yml up -d --build",
    "compose:prod": "docker-compose up -d --build",
    "codegen": "graphql-codegen --config codegen.ts",
    "build:clean": "npm run clean && npm run build",
    "build": "tsc --build && npm run copy:gql",
    "copy:gql": "copyfiles \"src/**/*.gql\" build",
    "clean": "rimraf build",
    "db:migrate": "ts-node src/database/migrations/migration_createTables.ts",
    "db:migrate:dev": "ts-node src/database/migrations/migration_createTables.ts -- dev",
    "db:seed:dev": "ts-node src/database/seeders/seed_1.ts -- dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EtienneDuv/backend-exercise-2023.git"
  },
  "keywords": [
    "applifting",
    "graphql",
    "express",
    "test"
  ],
  "author": "EtienneDuv",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EtienneDuv/backend-exercise-2023/issues"
  },
  "homepage": "https://github.com/EtienneDuv/backend-exercise-2023#readme",
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "ip": "^1.1.8",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.6.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@graphql-codegen/cli": "2.16.4",
    "@graphql-codegen/introspection": "2.2.3",
    "@graphql-codegen/typescript": "2.8.7",
    "@graphql-codegen/typescript-resolvers": "2.7.12",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.4",
    "@types/cors": "^2.8.13",
    "@types/ip": "^1.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/pg": "^8.6.6",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.32.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1"
  }
}
